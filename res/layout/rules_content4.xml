<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fadeScrollbars="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_view" >
            
            <TextView
                android:id="@+id/titlenote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="说明："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/titletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/titlenote"
                android:text="双色球红号只要数字选中即可，不要求排列顺序一致。"
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </RelativeLayout>
                
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/corner_view" >

            <TextView
                android:id="@+id/level1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="一等奖"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level1condtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level1"
                android:layout_marginLeft="10dp"
                android:text="条件："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level1cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level1"
                android:layout_toRightOf="@id/level1condtitle"
                android:text="选对全部6个红号和1个篮号"
                android:textColor="#FF0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level1awardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level1condtitle"
                android:layout_marginLeft="10dp"
                android:text="奖金："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level1award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level1cond"
                android:layout_toRightOf="@id/level1awardtitle"
                android:text="一般为500万元或更高"
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/corner_view" >

            <TextView
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="二等奖"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level2condtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level2"
                android:layout_marginLeft="10dp"
                android:text="条件："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level2cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level2"
                android:layout_toRightOf="@id/level2condtitle"
                android:text="选对6个红号"
                android:textColor="#FF0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level2awardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level2condtitle"
                android:layout_marginLeft="10dp"
                android:text="奖金："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level2award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level2cond"
                android:layout_toRightOf="@id/level2awardtitle"
                android:text="当期一等奖奖金的30%，一般为几万或几十万不等"
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/corner_view" >

            <TextView
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="三等奖"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level3condtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level3"
                android:layout_marginLeft="10dp"
                android:text="条件："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level3cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level3"
                android:layout_toRightOf="@id/level3condtitle"
                android:text="选对5个红号和1个篮号"
                android:textColor="#FF0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level3awardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level3condtitle"
                android:layout_marginLeft="10dp"
                android:text="奖金："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level3award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level3cond"
                android:layout_toRightOf="@id/level3awardtitle"
                android:text="固定为3000元奖金"
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/corner_view" >

            <TextView
                android:id="@+id/level4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="四等奖"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level4condtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level4"
                android:layout_marginLeft="10dp"
                android:text="条件："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level4cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level4"
                android:layout_toRightOf="@id/level4condtitle"
                android:text="选对5个红号   或者  \n选对4个红号和1个篮号"
                android:textColor="#FF0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level4awardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level4cond"
                android:layout_marginLeft="10dp"
                android:text="奖金："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level4award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level4cond"
                android:layout_toRightOf="@id/level4awardtitle"
                android:text="固定为200元奖金"
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/corner_view" >

            <TextView
                android:id="@+id/level5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="五等奖"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level5condtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level5"
                android:layout_marginLeft="10dp"
                android:text="条件："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level5cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level5"
                android:layout_toRightOf="@id/level5condtitle"
                android:text="选对4个红号   或者  \n选对3个红号和1个篮号"
                android:textColor="#FF0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level5awardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level5cond"
                android:layout_marginLeft="10dp"
                android:text="奖金："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level5award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level5cond"
                android:layout_toRightOf="@id/level5awardtitle"
                android:text="固定为10元奖金"
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/corner_view" >

            <TextView
                android:id="@+id/level6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="六等奖"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level6condtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level6"
                android:layout_marginLeft="10dp"
                android:text="条件："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level6cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level6"
                android:layout_toRightOf="@id/level6condtitle"
                android:text="只要选对1个篮号即可"
                android:textColor="#FF0000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level6awardtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level6condtitle"
                android:layout_marginLeft="10dp"
                android:text="奖金："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/level6award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level6cond"
                android:layout_toRightOf="@id/level6awardtitle"
                android:text="固定为5元奖金"
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>