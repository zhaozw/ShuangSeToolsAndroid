<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listviewitemcontainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ItemTitle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:background="#000000"
        android:clickable="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ItemID"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:clickable="false"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:textSize="18sp" >
        </TextView>

        <TextView
            android:id="@+id/ItemDate"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/ItemID"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:background="#000000"
            android:paddingBottom="10dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:clickable="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ItemContent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/ItemTitle"
        android:background="#000000"
        android:clickable="false"
        android:paddingLeft="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/blankrbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:clickable="false"
            android:padding="3dp"
            android:src="@drawable/blankr1" />

        <ImageButton
            android:id="@+id/blankrbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:padding="3dp"
            android:layout_toRightOf="@id/blankrbtn1"
            android:clickable="false"
            android:src="@drawable/blankr2" />

        <ImageButton
            android:id="@+id/blankrbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:padding="3dp"
            android:layout_toRightOf="@id/blankrbtn2"
            android:src="@drawable/blankr3" />

        <ImageButton
            android:id="@+id/blankrbtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:padding="3dp"
            android:layout_toRightOf="@id/blankrbtn3"
            android:clickable="false"
            android:src="@drawable/blankr4" />

        <ImageButton
            android:id="@+id/blankrbtn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:padding="3dp"
            android:layout_toRightOf="@id/blankrbtn4"
            android:clickable="false"
            android:src="@drawable/blankr5" />

        <ImageButton
            android:id="@+id/blankrbtn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:padding="3dp"
            android:layout_toRightOf="@id/blankrbtn5"
            android:clickable="false"
            android:src="@drawable/blankr6" />
        
        <TextView
            android:id="@+id/ItemIDSeparator"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_toRightOf="@id/blankrbtn6"
            android:background="#000000"
            android:text=" + "
            android:clickable="false"
            android:textSize="20sp" >
        </TextView>

        <ImageButton
            android:id="@+id/blankbluebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_toRightOf="@id/ItemIDSeparator"
            android:padding="3dp"
            android:clickable="false"
            android:src="@drawable/blankblue" />
        
        <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/bg_arrow_right" />
    </RelativeLayout>

</RelativeLayout>