<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_view"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="购彩原则:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 理性购彩，娱乐玩彩，非成年人请勿使用本软件；"
                android:textColor="#FF0000"
                android:textSize="18sp"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. 选定方法，技术选号，彩票大师盖尔.霍华德研究建议：永远不要随机选号！"
                android:textColor="#FF0000"
                android:textSize="18sp"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. 坚持就是胜利！"
                android:textColor="#FF0000"
                android:textSize="18sp"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_view"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/top_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="投注截止:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/time_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1天14小时24分56秒"
                android:textColor="#FF0000"
                android:textSize="18sp"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_view"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="玩法规则:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 双色球单注号码含6个红号和1个蓝号, 红号从1至33中任选六个（不要求排列顺序），蓝号从1至16中任选一个，每注2元."
                android:textColor="#FF0000"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n2. 双色球每周二，四，日晚21：30开奖,销售截止时间为开奖当天晚20：00点."
                android:textColor="#FF0000"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_view" 
            android:orientation="vertical" >

            <TextView
                android:id="@+id/remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单式投注法："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/remindstr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="从1-33中选择6个不重复的红号(无顺序要求), 从1-16中选择一个蓝号, 组合为一注; 一次可购买多注单式号码, 也可将该单式重复购买多次(倍投法)."
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_view" 
            android:orientation="vertical" >

            <TextView
                android:id="@+id/remind2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="复式投注法："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/remindstr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="从1-33中选择7至20个不重复的红号(无顺序要求), 从1-16中选择1到多个蓝号, 组合起来投注;"
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_view"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/remind3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胆拖投注法："
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/remindstr3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="从1-33中选1至5个红号作为必出胆码, 从剩余的红号中再选1-20个红号作为拖码, 组合起来投注. \n\n比如3胆5拖: 看好红号6, 11, 26必出, 选为3个胆码, 然后从剩下的红号中看好2, 7, 12, 25, 31五个红号作为拖码, 组合为6, 11, 26 + 2, 7, 12, 15, 31的三胆五拖投注."
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>